# Mike's .screenrc file.
#
# I don't like the default screen escape key. this maps it to the backtick.
escape ``
defencoding UTF-8 # UTF-8
defutf8 on # yep
startup_message off #why would I need it?
# turn visual bell on
vbell on
vbell_msg " ! "
# define a bigger scrollback, default is 100 lines
defscrollback 20000
# Remove some stupid / dangerous key bindings
bind ^k
bind ^\
bind \\ quit
bind K kill
bind } history
# emulate .logout message
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."
# message for activity in another window
activity "Activity in %N (%t) [%w:%s]~"
# default title for windows
shelltitle ' terminal '
# don't use the hardstatus line for system messages, use reverse video instead
 # (we'll be using it for the list of tab windows - see hardstatus alwayslastline
 # below)
hardstatus off
hardstatus alwayslastline
hardstatus string "%{= Kk}%{=b}%{+g} %{-b}%{R}%H: %{g}%w %{+b}%=%{kG}Load: %l |%{b}%C%A%{g} : %{b}%D, %d/%m/%Y "
# allow bold colors - necessary for some reason
attrcolor b ".I"
# erase background with current bg color
defbce "on"
