[user]
    name = My Name
    email = me@domain.com
[core]
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
	pager = less -F -X
[color]
    ui = true
[apply]
    whitespace = strip
[diff]
    color = auto
    rename = copy
[pager]
    color = true
[status]
    color = auto
[push]
	default = simple
[credential]
	helper = osxkeychain
[alias]
    puff=pull --ff --ff-only
